{
    "compilerOptions": {
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "lib": [
            "DOM",
            "ES6",
            "ES2016.Array.Include"
        ],
        "outDir": "dist",
        "resolveJsonModule": true,
        "strict": true
    },
    "exclude": [
        "src/**/*.spec.ts"
    ],
    "include": [
        "src/**/*.ts"
    ]
}